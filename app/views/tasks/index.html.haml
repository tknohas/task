.container
  %h2.text-center.mt-4 やること一覧
  .d-flex.justify-content-end.mb-3
    = link_to '新規作成', new_task_path, class: 'btn btn-primary'
  %table.table.table-striped.table-hover
    %thead.table-light
      %tr
        %th やること
        %th 登録日
        %th
    %tbody
      - @tasks.each do |task|
        %tr
          %td= link_to task.title, task_path(task), class: 'text-decoration-none'
          -# %td
          -#   - if task.executor
          -#     = "#{task.executor.name}"
          %td= task.created_at.strftime("%Y/%m/%d")
          %td
            = button_to '完了', task_complete_path(task), method: :patch, class: 'btn btn-outline-success'
