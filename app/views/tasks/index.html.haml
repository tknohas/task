.container
  %h2.text-center.mt-4 やること一覧
  .d-flex.justify-content-end.mb-3
    = link_to '新規作成', new_task_path, class: 'btn btn-primary'
  %table.table.table-striped.table-hover
    %thead.table-light
      %tr
        %th やること
        %th 作成者
        %th 担当者
        %th
    %tbody
      - @tasks.each do |task|
        %tr
          %td= task.title
          %td= task.user.name
          %td
            - if task.executor
              = "#{task.executor.name}"
          %td
            = link_to '編集', edit_task_path(task), class: 'btn btn-sm btn-outline-primary me-2'
