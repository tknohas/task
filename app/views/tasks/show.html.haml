%h2.text-center.mt-4 タスク詳細

.container.mt-5
  .card
    .card-header.bg-primary.text-white
      %h2.mb-0= @task.title
    .card-body
      .row
        .col-md-8
          %h4.card-title 詳細:
          %p.card-text= @task.description
          %h4.mt-4 担当者:
          %p.card-text
            - if @task.executor
              #{@task.executor.name}
          %h4.mt-4 作成者:
          %p.card-text= @task.user.name
          %h4.mt-4 作成日:
          %p.card-text= @task.created_at.strftime('%Y年%m月%d日')
          - if @task.user == Current.user
            .d-flex
              %td
                = link_to '編集', edit_task_path(@task), class: 'btn btn-sm btn-outline-primary me-2'
              %td
                = button_to '削除', task_path(@task), method: :delete, data: { turbo_confirm: '本当に削除しますか？' }, class: 'btn btn-sm btn-outline-danger me-2'
